<%- include('partials/header'); -%>
<h1>Home</h1>
<p><%=homeStartingContent%></p>
<% posts.forEach(post=>{ %>
    <h1> <%=post.title%> </h1>
    <% if(post.content.length>100){ %>
        <p> 
            <%=post.content.substring(0,100)%>
            <a href="/posts/<%=post._id%>" >Read More</a>
        </p> 
    <% }else{ %>
        <p> <%=post.content%> 
            <a href="/posts/<%=post._id%>">go to the page</a>
        </p>
    <% } %>
    
<%}); %>

<%- include('partials/footer'); -%>

